
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/components/Ionicons/css/ionicons.min.css">
<link rel="stylesheet" href="~/components/bootstrap-switch/css/bootstrap3/bootstrap-switch.min.css" />
<style type="text/css">
    td {
        text-align: center;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;新建</button>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped" style="margin-top: 10px;">
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>名称</td>
                        <td>标识</td>
                        <td>路径</td>
                        <td>是否启用</td>
                        <td>是否显示</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody data-bind="foreach:rows">
                    <tr>
                        <td data-bind="text:($root.pageIndex()-1)*$root.pageSize()+$index()+1"></td>
                        <td data-bind="text:menuName"></td>
                        <td data-bind="text:identity"></td>
                        <td data-bind="text:routeUrl"></td>
                        <td>
                            <input type="checkbox" data-bind="bootstrapSwitch:activable"/>
                        </td>
                        <td>
                            <input type="checkbox" data-bind="bootstrapSwitch:visiable" data-on="<i class='fa fa-check'><i>" data-off="<i class='fa fa-times'></i>" />
                        </td>
                        <td>
                            <a href="javascript:;" title="编辑"><i class="fa fa-edit"></i></a>
                            <a href="javascript:;" title="删除"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
            @Html.Partial("_PartialPagination")
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/knockout.pagination.js"></script>
    <script src="~/components/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <script src="~/components/bootstrap-switch/js/ko.bindingHandlers.bootstrapSwitch.js"></script>
    <script type="text/javascript">
        $(function() {
            ko.applyBindings(viewmodel);
            viewmodel.pageSize(15);
            viewmodel.pageIndex(1);
            viewmodel.remoteUrl('@Url.Action("GetMenusByPaged")');
            viewmodel.loadData();
        });
    </script>
}
